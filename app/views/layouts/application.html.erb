<!DOCTYPE html>
<html>
<head>
  <title>Specapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<h1 class="page-title">KKM Relocation Specs Webpage</h1>
	 <% flash.each do |type, message| %>
	  <div class="alert flash <%= type %>">
	    <%= message %>
	  </div>
	  <% end %>

	<!-- Source: http://www.jorgecoca.com/buils-search-form-ruby-rails/ -->
	<div class="search-bar">
		<%= form_tag(specs_path, :method => "get", class: "navbar-form", id: "search-form") do %>
		    <div class="input-append">
		      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Specs" %>
		      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
		           of using a Rails form helper -->
		      <button class="btn" type="submit"><i class="icon-search"></i>Search</button>
		    </div>
	  	<% end %>
	</div>

	<%= yield %>

</body>
</html>
